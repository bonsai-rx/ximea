<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Title>Bonsai.Ximea</Title>
    <Description>Bonsai Library containing modules for acquiring images from Ximea cameras. Ximea xiAPI is required.</Description>
    <Authors>Bruno Cruz, Gonçalo Lopes</Authors>
    <Copyright>Copyright © Bonsai Foundation 2023</Copyright>
    <ProjectUrl>https://github.com/bonsai-rx/ximea</ProjectUrl>
    <PackageIconUrl>https://bonsai-rx.org/assets/images/bonsai.png</PackageIconUrl>
    <GeneratePackageOnBuild Condition="'$(Configuration)'=='Release'">true</GeneratePackageOnBuild>
    <PackageProjectUrl></PackageProjectUrl>
    <PackageLicenseExpression></PackageLicenseExpression>
    <PackageIcon></PackageIcon>
    <PackageOutputPath></PackageOutputPath>
    <PackageTags>Bonsai Rx Bonsai.Ximea Ximea xiAPI</PackageTags>
    <TargetFramework>net472</TargetFramework>
    <Features>strict</Features>
    <Version>0.2.0-preview1</Version>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Bonsai.Core" Version="2.8.1" />
    <PackageReference Include="OpenCV.Net" Version="3.4.2" />
  </ItemGroup>


  <ItemGroup>
      <Content Include="..\Externals\*.dll" PackagePath="build\net472\bin" />
      <Content Include="Externals\xiapi64.dll" Link="xiapi64.dll" PackagePath="content">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
    <Content Include="Externals\xiApi.NETX64.dll" Link="xiApi.NETX64.dll" PackagePath="content">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Externals\xiapi64.dll" Link="xiapi64.dll" PackagePath="content">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Reference Include="xiApi.Net">
      <HintPath>Externals\xiApi.NETX64.dll</HintPath>
    </Reference>
  </ItemGroup>


</Project>
